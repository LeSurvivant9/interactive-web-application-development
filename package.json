{
  "name": "mediatracker-monorepo",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev:back": "bun --filter mediatracker-backend start:dev",
    "dev:front": "bun --filter mediatracker-frontend dev",
    "dev": "bun run dev:back & bun run dev:front",
    "check": "bun run check:biome && bun run check:prettier && bun run lint:yaml",
    "check:biome": "biome check .",
    "check:prettier": "prettier --check \"**/*.md\"",
    "lint:yaml": "yamllint .",
    "format": "bun run format:biome && bun run format:prettier",
    "format:biome": "biome check --write .",
    "format:prettier": "prettier --write \"**/*.md\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "**/*.{md}": [
      "prettier --write"
    ],
    "**/*.{yaml,yml}": [
      "yamllint -c .yamllint"
    ],
    "docs/uml/**/*.puml": [
      "java -jar docs/tools/plantuml.jar -tsvg",
      "git add"
    ],
    "docs/rapport/**/*.tex": [
      "chktex -q -n1"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "husky": "^9.1.7",
    "knip": "^5.80.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-attributes": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@apollo/client": "^4.0.11",
    "@apollo/server": "^5.2.0",
    "@nestjs/apollo": "^13.2.3",
    "@nestjs/graphql": "^13.2.3",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "prisma": "^7.2.0"
  }
}
